<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/completed_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">
        <TextView
            android:id="@+id/completed_description"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/title_size"
            android:padding="16dp" />
            <ImageButton
                android:id="@+id/delete_complete"
                android:layout_width="@dimen/delete_btn_size"
                android:layout_height="@dimen/delete_btn_size"
                android:adjustViewBounds="true"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete Button"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/delete_margin"
                android:layout_marginRight="@dimen/delete_margin"
                android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/complete_date"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:paddingRight="@dimen/date_padding"
            android:textSize="@dimen/date_size" />
    </RelativeLayout>
</android.support.v7.widget.CardView>