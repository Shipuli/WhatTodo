<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/todo_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/todo_description"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="@dimen/text_margin"
            android:textSize="25sp" />
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/delete_todo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/colorRemove"
                android:background="@drawable/ic_highlight_remove_24dp"
                />
            <ImageButton
                android:id="@+id/complete_todo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/colorComplete"
                android:background="@drawable/ic_radio_button_checked_24px"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>