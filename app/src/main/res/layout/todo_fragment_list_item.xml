<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/todo_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/delete_margin">

            <TextView
                android:id="@+id/todo_description"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/title_size"
                android:text="Juuhan shuttai" />

            <TextView
                android:id="@+id/todo_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/deadline_size"
                android:text="Deadline: 5.1.2016"
                android:layout_marginLeft="@dimen/date_padding" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/complete_todo"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_margin="@dimen/text_margin"
            android:src="@drawable/ic_radio_button_checked_24px"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Complete Button"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>